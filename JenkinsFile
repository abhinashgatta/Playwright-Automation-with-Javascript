pipeline {
    agent any

    tools {
        nodejs "NodeJS"   // configure NodeJS version in Jenkins Global Tools
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/abhinashgatta/Playwright-Automation-with-Javascript.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npx playwright test --reporter=line'
            }
        }

        stage('Archive Test Results') {
            steps {
                junit '**/test-results/*.xml'   // if you enable JUnit reporter in Playwright
                archiveArtifacts artifacts: '**/test-results/*.*', allowEmptyArchive: true
            }
        }
    }
}
